<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivPdfView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_file_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/etSeme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/ivPdfView"
            android:hint="Semester"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/etSemester"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/etSeme"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Semester"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/etSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/etSemester"
            app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toRightOf="@id/ivPdfView"
            android:textStyle="bold"
            android:textSize="18sp"
            android:hint="Subject"/>

        <TextView
            android:id="@+id/etSubject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/etSemester"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/etSub"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:text="Subject"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>